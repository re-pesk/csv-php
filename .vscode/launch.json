    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "ignore": ["**/vendor/**/*.php"],
            "port": 9003,
        }, {
            "name": "Launch index.php",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/index.php",
            "ignore": ["**/vendor/**/*.php"],
            "cwd": "${workspaceFolder}",
            "port": 9003,
        }, {
            "name": "Launch currently opened script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9003,
        }
    ]
}